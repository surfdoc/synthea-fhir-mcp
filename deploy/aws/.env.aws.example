# AWS Deployment Environment Variables
# Copy to .env and fill in your values

# AWS RDS PostgreSQL Configuration
AWS_RDS_ENDPOINT=your-database.xxx.rds.amazonaws.com
AWS_RDS_PORT=5432

# Database Credentials
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=synthea

# AWS-specific Settings
AWS_RDS_SSL=true           # Use SSL for RDS connections (recommended)
AWS_RDS_USE_IAM=false      # Use IAM authentication (not yet implemented)
AWS_REGION=us-east-1

# Application Settings
PORT=8080

# Optional: For local testing with AWS RDS
# DATABASE_URL=postgresql://postgres:password@your-database.xxx.rds.amazonaws.com:5432/synthea?sslmode=require