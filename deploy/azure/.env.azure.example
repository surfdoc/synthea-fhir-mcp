# Azure Deployment Environment Variables
# Copy to .env and fill in your values

# Azure Database for PostgreSQL Configuration
AZURE_POSTGRES_HOST=your-server.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432

# Database Credentials
# Note: Azure often uses username@servername format
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=synthea

# Application Settings
PORT=8080

# Azure-specific Settings
# SSL is required for Azure PostgreSQL
AZURE_POSTGRES_SSL_MODE=require

# Optional: For local testing with Azure PostgreSQL
# DATABASE_URL=postgresql://postgres@your-server:password@your-server.postgres.database.azure.com:5432/synthea?sslmode=require

# Optional: Use Managed Identity (not yet implemented)
AZURE_USE_MANAGED_IDENTITY=false